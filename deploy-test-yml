- name: Deploy Insurance App to Test
  hosts: test
  become: yes
  tasks:
    - name: Stop running container if exists
      shell: docker stop insurance-app-test || true
      ignore_errors: yes

    - name: Remove existing container if exists
      shell: docker rm insurance-app-test || true
      ignore_errors: yes

    - name: Pull latest Docker image
      shell: docker pull bromaaascripts/insurance-app:latest

    - name: Run container
      shell: docker run -d -p 8081:8081 --name insurance-app-test bromaaascripts/insurance-app:latest
